@model IEnumerable<PaiAirlines.Models.Booking>

@{
    ViewData["Title"] = "Index";
    Dictionary<int, User> dictUsers = (Dictionary<int, User>)ViewData["userList"];
    List<Flight> lstFlights = (List<Flight>) ViewData["FlightList"];
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
                <th>
                    User
                </th>
                <th>
                    Flight Number
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeatsAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    Flight currFlight = lstFlights.Single(flt => flt.ID == item.FlightID);
        <tr>
            <td>
                @dictUsers[item.Userid].Email
            </td>
            <td>
                @currFlight.FlightNumber
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
